doctype html
html(lang="en")
  head
    meta(http-equiv='content-type' content='text/html' charset='utf-8')
    meta(name='viewport' content='width=device-width')
    link(href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300' rel='stylesheet' type='text/css')
    link(rel='stylesheet' type='text/css' href='css/pure-min.css')
    link(rel='stylesheet' type='text/css' href='css/style.css')
    title=title
  body
    include banner

    form.pure-form.right(action='/' method='post')
      input(type='text' name='addFollower' placeholder='AddFollower Here' autofocus=true required=true)
      input(type='submit' value='Submit')

    form.right(action='/' method='post')
      input(type='text' name='removeFollower' placeholder='RemoveFollower Here' autofocus=true required=true)
      input(type='submit' value='Submit')

    form.right(action='/' method='post')
      input(type='url' name='addLink' placeholder='AddLink Here' autofocus=true required=true)
      input(type='submit' value='Submit')

    a(href='/logout') Logout
