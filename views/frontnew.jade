doctype html
html(lang='en')
	head
		meta(http-equiv='content-type' content='text/html; charset=utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet' type='text/css' href='css/style.css')
		script(src="js/jquery-1.10.2.min.js")
		script(script src="js/front.js")
		title=Blabrr

		// loading bootstrap
		link(href="css/bootstrap.css" rel="stylesheet")
		// loading FlatUI
		link(href="css/flat-ui.css" rel="stylesheet")
		
		body
			include flash
			include scripts

			div.overlay

			div.ar.login_popup
				a.button(href='#' style='float:right;').
					Login
				div.popup
					a.close(href="#" style="float:right;").
						X
					form(style="text-align:center;")
						h2.
							Log In
						form(action='/login' method='post')
							p
								span.title
								input.form-control(name="username" type="text" placeholder='username' autofocus=true required=true)
							p
								span.title
								input.form-control(name="password" placeholder="password" required=true type="password")
							p
								input.btn.btn-block.btn-lg.btn-warning(name="" type="button" value="Login")

			div.info
				div.leftside
					div.intro
						h1.
							NAME OF SITE
						p.
							NAME OF SITE allows you to store and share the links that you care about.

				div.rightside
					div.signup
						h3.
							Sign Up Here!
						form(action='/signup' method='post')
							p
								input.form-control(type='text' name='firstname' placeholder='First Name' required=true)
							p
								input.form-control(type='text' name='lastname' placeholder='Last Name' required=true)
							p
								input.form-control(type='text' name='email' placeholder='Email Address' required=true)
							p
								a.btn.btn-block.btn-lg.btn-primary(href="#fakelink").
									Submit